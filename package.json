{
  "name": "sap-development-toolkit",
  "displayName": "SAP Development Toolkit",
  "description": "SAP UI5 Development Tools for VSCode",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onView:sapToolkitExplorer",
    "onView:bspApplicationExplorer",
    "onCommand:sapToolkit.createProject",
    "onCommand:sapToolkit.connectToSap"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sap-toolkit",
          "title": "SAP Toolkit",
          "icon": "$(package)"
        }
      ]
    },
    "views": {
      "sap-toolkit": [
        {
          "id": "sapToolkitExplorer",
          "name": "Components",
          "icon": "$(package)",
          "contextualTitle": "SAP Components"
        },
        {
          "id": "bspApplicationExplorer",
          "name": "BSP Applications",
          "icon": "$(server-process)",
          "contextualTitle": "BSP Applications"
        }
      ]
    },
    "commands": [
      {
        "command": "sapToolkit.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "sapToolkit.createProject",
        "title": "SAP: Create New Project"
      },
      {
        "command": "sapToolkit.connectToSap",
        "title": "SAP: Connect to System",
        "icon": "$(plug)"
      },
      {
        "command": "sapToolkit.selectConnection",
        "title": "SAP: Select Connection"
      },
      {
        "command": "sapToolkit.refreshBspApplications",
        "title": "Refresh BSP Applications",
        "icon": "$(refresh)"
      },
      {
        "command": "sapToolkit.downloadBspApplication",
        "title": "Download BSP Application"
      },
      {
        "command": "sapToolkit.uploadBspApplication",
        "title": "Upload BSP Application"
      },
      {
        "command": "sapToolkit.openBspApplication",
        "title": "Open BSP Application"
      },
      {
        "command": "sapToolkit.installComponent",
        "title": "Install Component"
      },
      {
        "command": "sapToolkit.showComponentDetails",
        "title": "Show Details"
      },
      {
        "command": "sapToolkit.startDebugging",
        "title": "SAP: Start Debugging"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sapToolkit.refreshEntry",
          "when": "view == sapToolkitExplorer",
          "group": "navigation"
        },
        {
          "command": "sapToolkit.connectToSap",
          "when": "view == bspApplicationExplorer",
          "group": "navigation"
        },
        {
          "command": "sapToolkit.refreshBspApplications",
          "when": "view == bspApplicationExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sapToolkit.installComponent",
          "when": "view == sapToolkitExplorer && viewItem == component"
        },
        {
          "command": "sapToolkit.showComponentDetails",
          "when": "view == sapToolkitExplorer && viewItem == component"
        },
        {
          "command": "sapToolkit.downloadBspApplication",
          "when": "view == bspApplicationExplorer && viewItem == bspApplication"
        },
        {
          "command": "sapToolkit.uploadBspApplication",
          "when": "view == bspApplicationExplorer && viewItem == bspApplication"
        }
      ],
      "commandPalette": [
        {
          "command": "sapToolkit.createProject"
        },
        {
          "command": "sapToolkit.connectToSap"
        },
        {
          "command": "sapToolkit.selectConnection"
        }
      ]
    },
    "configuration": {
      "title": "SAP Development Toolkit",
      "properties": {
        "sapToolkit.showVersions": {
          "type": "boolean",
          "default": true,
          "description": "Show component versions in the tree view"
        },
        "sapToolkit.autoRefresh": {
          "type": "boolean",
          "default": false,
          "description": "Automatically refresh component list"
        },
        "sapToolkit.ui5Version": {
          "type": "string",
          "default": "1.108.0",
          "description": "Default SAPUI5 version for new projects"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "https-proxy-agent": "^7.0.6",
    "socks-proxy-agent": "^8.0.5"
  }
}
